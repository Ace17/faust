
<faust>
	<name>amp -- stereo amplifier stage</name>
	<author>Albert Graef</author>
	<copyright></copyright>
	<license></license>
	<version>1.0</version>
	<classname>mydsp</classname>
	<inputs>2</inputs>
	<outputs>2</outputs>
	<ui>
		<activewidgets>
			<count>4</count>
			<widget type="nentry" id="1">
				<label>bass</label>
				<varname>fentry0</varname>
				<init>0.0f</init>
				<min>-2e+01f</min>
				<max>2e+01f</max>
				<step>0.1f</step>
			</widget>
			<widget type="nentry" id="2">
				<label>treble</label>
				<varname>fentry1</varname>
				<init>0.0f</init>
				<min>-2e+01f</min>
				<max>2e+01f</max>
				<step>0.1f</step>
			</widget>
			<widget type="nentry" id="3">
				<label>gain</label>
				<varname>fentry2</varname>
				<init>0.0f</init>
				<min>-96.0f</min>
				<max>96.0f</max>
				<step>0.1f</step>
			</widget>
			<widget type="hslider" id="4">
				<label>balance</label>
				<varname>fslider0</varname>
				<init>0.0f</init>
				<min>-1.0f</min>
				<max>1.0f</max>
				<step>0.001f</step>
			</widget>
		</activewidgets>
		
		<passivewidgets>
			<count>2</count>
			<widget type="hbargraph" id="5">
				<label>left</label>
				<varname>fbargraph0</varname>
				<min>-96.0f</min>
				<max>1e+01f</max>
			</widget>
			<widget type="hbargraph" id="6">
				<label>right</label>
				<varname>fbargraph1</varname>
				<min>-96.0f</min>
				<max>1e+01f</max>
			</widget>
		</passivewidgets>
		
		<layout>
			<group type="vgroup">
				<label></label>
				<group type="hgroup">
					<label>0-amp</label>
					<group type="hgroup">
						<label>1-tone</label>
						<widgetref id="1" />
						<widgetref id="2" />
					</group>
					<group type="hgroup">
						<label>2-gain</label>
						<widgetref id="3" />
					</group>
				</group>
				<group type="vgroup">
					<label>3-balance</label>
					<widgetref id="4" />
				</group>
				<group type="vgroup">
					<label>4-meter</label>
					<widgetref id="5" />
					<widgetref id="6" />
				</group>
			</group>
		</layout>
	</ui>
</faust>
